<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">

            <block name="validator" template="Macademy_Bootcamp::validator.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array" >
                        <item name="components" xsi:type="array">
                            <item name="validator" xsi:type="array">
                                <item name="component" xsi:type="string">Macademy_Bootcamp/js/validator</item>
                                <item name="config" xsi:type="array">
                                    <item name="template" xsi:type="string">Macademy_Bootcamp/validator</item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
